<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Pinterest</title>
    <link rel="icon" href="https://artandarchives.wordpress.com/wp-content/uploads/2013/07/pinterest_badge_red.png" type="image/x-icon">
  </head>
  <body>
  <div class="container">
    <h3>Create a Post</h3>
    <form action="/createpost" method="post" enctype="multipart/form-data" >
        <input  class=" d-flex my-1 w-45  " type="file" name="postimage">
        <input  class=" d-flex my-1 w-45 " type="text" placeholder="Title" name="title">
       <textarea class=" d-flex my-1 w-45  h-50" type="text" placeholder="Description" name="description"></textarea>
        <input  class=" d-flex my-1  bg-danger mx-5" type="submit" value="Create Post">
    </form>
</div>
<script>
  // Disable right-click
document.addEventListener('contextmenu', function (e) {
e.preventDefault();
}, false);

// Disable F12 (Inspect Element) and Ctrl+Shift+I/J/U
document.addEventListener('keydown', function (e) {
// Disable F12
if (e.keyCode === 123) {
    e.preventDefault();
}
// Disable Ctrl+Shift+I (Inspect)
if (e.ctrlKey && e.shiftKey && e.keyCode === 73) {
    e.preventDefault();
}
// Disable Ctrl+Shift+J (Console)
if (e.ctrlKey && e.shiftKey && e.keyCode === 74) {
    e.preventDefault();
}
// Disable Ctrl+U (View Page Source)
if (e.ctrlKey && e.keyCode === 85) {
    e.preventDefault();
}
}, false);

// Optional: Disable Ctrl+S (Save As) and Ctrl+P (Print)
document.addEventListener('keydown', function (e) {
// Disable Ctrl+S
if (e.ctrlKey && e.keyCode === 83) {
    e.preventDefault();
}
// Disable Ctrl+P
if (e.ctrlKey && e.keyCode === 80) {
    e.preventDefault();
}
}, false);

 </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>