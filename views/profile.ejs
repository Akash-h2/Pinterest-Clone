<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <title>Pinterest</title>
    <link rel="icon" href="https://artandarchives.wordpress.com/wp-content/uploads/2013/07/pinterest_badge_red.png" type="image/x-icon">
  </head>
  <body>
   
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <!-- Brand Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
          <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" style="width: 40px; height: 40px; margin-right: 8px;" />
          Pinterest
        </a>
        
        <!-- Toggle Button for Mobile View -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <!-- Navbar Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/saved-posts">Saved Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/feed">Feed</a>
            </li>
            <li class="nav-item bg-danger">
              <a class="nav-link text-white" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="containerpers my-5">
      <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
      </form>
      <div class="cardpers">
        <div class="profile-picture">
          <img src="<%= user.dp %>" alt="img" style="max-width: 150px; max-height: 150px;">
          <i class="ri-pencil-fill" id="uploadicon"></i>
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <a href="/add" class="container add-post">Create Post</a> 
      </div>
    </div>
    
    <div class="container">
      <div class="card" style="width: 18rem;">
        <img src="<%= user?.posts[0]?.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <a href="/show/posts" class="card-title">All Designs</a>
          <h6 class="card-title"><%= user.posts.length %> Pins</h6>
        </div>
      </div>
    </div>
  
    <script>
      document.querySelector("#uploadicon").addEventListener("click", function() {
        document.querySelector("#uploadform input").click();
      });

      document.querySelector("#uploadform input").addEventListener("change", function() {
        document.querySelector("#uploadform").submit();
      });
    </script>
    
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
      // Disable right-click
document.addEventListener('contextmenu', function (e) {
    e.preventDefault();
}, false);

// Disable F12 (Inspect Element) and Ctrl+Shift+I/J/U
document.addEventListener('keydown', function (e) {
    // Disable F12
    if (e.keyCode === 123) {
        e.preventDefault();
    }
    // Disable Ctrl+Shift+I (Inspect)
    if (e.ctrlKey && e.shiftKey && e.keyCode === 73) {
        e.preventDefault();
    }
    // Disable Ctrl+Shift+J (Console)
    if (e.ctrlKey && e.shiftKey && e.keyCode === 74) {
        e.preventDefault();
    }
    // Disable Ctrl+U (View Page Source)
    if (e.ctrlKey && e.keyCode === 85) {
        e.preventDefault();
    }
}, false);

// Optional: Disable Ctrl+S (Save As) and Ctrl+P (Print)
document.addEventListener('keydown', function (e) {
    // Disable Ctrl+S
    if (e.ctrlKey && e.keyCode === 83) {
        e.preventDefault();
    }
    // Disable Ctrl+P
    if (e.ctrlKey && e.keyCode === 80) {
        e.preventDefault();
    }
}, false);

     </script>
  </body>
</html>
